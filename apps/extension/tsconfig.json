{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "types": ["chrome"],
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@yowu-devtools/shared": ["../../packages/shared/src"],
      "@yowu-devtools/shared/*": ["../../packages/shared/src/*"]
    },
    "noEmit": true
  },
  "include": ["src/**/*.ts", "../../packages/shared/src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

